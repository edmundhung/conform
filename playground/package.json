{
	"name": "@conform-to/playground",
	"private": true,
	"sideEffects": false,
	"scripts": {
		"build": "run-p build:*",
		"build:style": "cross-env NODE_ENV=production tailwindcss -o ./app/styles/tailwind.css --minify",
		"build:remix": "remix build",
		"dev": "run-p dev:*",
		"dev:style": "tailwindcss -o ./app/styles/tailwind.css --watch",
		"dev:remix": "remix dev",
		"start": "remix-serve build"
	},
	"dependencies": {
		"@conform-to/react": "*",
		"@conform-to/zod": "*",
		"@remix-run/node": "^1.6.3",
		"@remix-run/react": "^1.6.3",
		"@remix-run/serve": "^1.6.3",
		"react": "^17.0.2",
		"react-dom": "^17.0.2"
	},
	"devDependencies": {
		"@remix-run/dev": "^1.6.3",
		"@remix-run/eslint-config": "^1.6.3",
		"@tailwindcss/forms": "^0.5.2",
		"@types/react": "^17.0.45",
		"@types/react-dom": "^17.0.17",
		"eslint": "^8.15.0",
		"npm-run-all": "^4.1.5",
		"tailwindcss": "^3.1.4",
		"typescript": "^4.6.4"
	},
	"engines": {
		"node": ">=14"
	}
}
