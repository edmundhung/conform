{
	"private": true,
	"sideEffects": false,
	"scripts": {
		"build": "run-s build:*",
		"build:remix": "remix build",
		"ci": "sed -i -e \"s/CF_PAGES_BRANCH:\\s'main'/CF_PAGES_BRANCH: '$CF_PAGES_BRANCH'/g\" ./functions/[[path]].ts",
		"dev:remix": "cross-env NODE_ENV=development remix dev",
		"dev:wrangler": "cross-env NODE_ENV=development wrangler pages dev public --port 3000 --kv CACHE -b ENVIRONMENT=development",
		"dev": "run-p dev:*",
		"predev": "remix build",
		"start": "cross-env NODE_ENV=production npm run dev:wrangler"
	},
	"dependencies": {
		"@markdoc/markdoc": "^0.1.7",
		"@octokit/core": "^4.0.5",
		"@remix-run/cloudflare": "^1.14.0",
		"@remix-run/cloudflare-pages": "^1.14.0",
		"@remix-run/react": "^1.14.0",
		"cross-env": "^7.0.3",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-syntax-highlighter": "^15.5.0"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^3.14.1",
		"@remix-run/dev": "^1.14.0",
		"@remix-run/eslint-config": "^1.14.0",
		"@tailwindcss/forms": "^0.5.2",
		"@tailwindcss/typography": "^0.5.4",
		"@types/react": "^18.0.28",
		"@types/react-dom": "^18.0.11",
		"@types/react-syntax-highlighter": "^15.5.5",
		"eslint": "^8.35.0",
		"npm-run-all": "^4.1.5",
		"tailwindcss": "^3.2.7",
		"typescript": "^4.9.5",
		"wrangler": "^2.12.0"
	},
	"engines": {
		"node": ">=16.13"
	}
}
