{
	"private": true,
	"sideEffects": false,
	"scripts": {
		"build": "run-s \"build:*\"",
		"build:style": "cross-env NODE_ENV=production tailwindcss -i ./styles.css -o ./app/styles.css --minify",
		"build:remix": "remix build",
		"ci": "sed -i -e \"s/CF_PAGES_BRANCH:\\s'main'/CF_PAGES_BRANCH: '$CF_PAGES_BRANCH'/g\" ./server.js",
		"dev:remix": "remix watch",
		"dev:style": "tailwindcss -i ./styles.css -o ./app/styles.css --watch",
		"dev:wrangler": "cross-env NODE_ENV=development wrangler pages dev ./public --kv CACHE",
		"dev": "remix build && run-p \"dev:*\"",
		"start": "cross-env NODE_ENV=production npm run dev:wrangler"
	},
	"dependencies": {
		"@markdoc/markdoc": "^0.1.7",
		"@octokit/core": "^4.0.5",
		"@remix-run/cloudflare": "^1.9.0",
		"@remix-run/cloudflare-pages": "^1.9.0",
		"@remix-run/react": "^1.9.0",
		"cross-env": "^7.0.3",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-syntax-highlighter": "^15.5.0"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^3.14.1",
		"@remix-run/dev": "^1.9.0",
		"@remix-run/eslint-config": "^1.9.0",
		"@tailwindcss/forms": "^0.5.2",
		"@tailwindcss/typography": "^0.5.4",
		"@types/react": "^18.0.15",
		"@types/react-dom": "^18.0.6",
		"@types/react-syntax-highlighter": "^15.5.5",
		"eslint": "^8.20.0",
		"npm-run-all": "^4.1.5",
		"remix-flat-routes": "^0.5.1",
		"tailwindcss": "^3.1.8",
		"typescript": "^4.7.4",
		"wrangler": "^2.0.27"
	},
	"engines": {
		"node": ">=16.13"
	}
}
