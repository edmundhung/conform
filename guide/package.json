{
	"private": true,
	"sideEffects": false,
	"scripts": {
		"build": "run-s \"build:*\"",
		"build:style": "cross-env NODE_ENV=production tailwindcss -o ./app/styles.css --minify",
		"build:remix": "remix build",
		"dev:remix": "remix watch",
		"dev:style": "tailwindcss -o ./app/styles.css --watch",
		"dev:wrangler": "cross-env NODE_ENV=development wrangler pages dev ./public",
		"dev": "remix build && run-p \"dev:*\"",
		"start": "cross-env NODE_ENV=production npm run dev:wrangler"
	},
	"dependencies": {
		"@remix-run/cloudflare": "^1.7.0",
		"@remix-run/cloudflare-pages": "^1.7.0",
		"@remix-run/react": "^1.7.0",
		"cross-env": "^7.0.3",
		"react": "^18.2.0",
		"react-dom": "^18.2.0"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^3.14.1",
		"@markdoc/markdoc": "^0.1.7",
		"@remix-run/dev": "^1.7.0",
		"@remix-run/eslint-config": "^1.7.0",
		"@tailwindcss/forms": "^0.5.2",
		"@tailwindcss/typography": "^0.5.4",
		"@types/react": "^18.0.15",
		"@types/react-dom": "^18.0.6",
		"eslint": "^8.20.0",
		"npm-run-all": "^4.1.5",
		"remix-flat-routes": "^0.4.3",
		"tailwindcss": "^3.1.8",
		"typescript": "^4.7.4",
		"wrangler": "^2.0.27"
	},
	"engines": {
		"node": ">=16.13"
	}
}
