{
	"private": true,
	"sideEffects": false,
	"name": "conform-guide",
	"type": "module",
	"scripts": {
		"build": "remix build",
		"ci": "sed -i -e \"s/CF_PAGES_BRANCH:\\s'main'/CF_PAGES_BRANCH: '$CF_PAGES_BRANCH'/g\" ./server.ts",
		"dev": "remix dev --manual -c \"npm run start\"",
		"predev": "remix build",
		"start": "wrangler pages dev public --port 3000 --kv CACHE -b ENVIRONMENT=development -b CF_PAGES_BRANCH=$(git branch --show-current)"
	},
	"dependencies": {
		"@markdoc/markdoc": "^0.4.0",
		"@remix-run/cloudflare": "^2.5.1",
		"@remix-run/cloudflare-pages": "^2.5.1",
		"@remix-run/react": "^2.5.1",
		"cross-env": "^7.0.3",
		"isbot": "^3",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-syntax-highlighter": "^15.5.0"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20240419.0",
		"@octokit/types": "^12.4.0",
		"@remix-run/dev": "^2.5.1",
		"@tailwindcss/forms": "^0.5.7",
		"@tailwindcss/typography": "^0.5.10",
		"@types/react": "^18.2.46",
		"@types/react-dom": "^18.2.18",
		"@types/react-syntax-highlighter": "^15.5.11",
		"tailwindcss": "^3.4.0",
		"typescript": "^5.3.3",
		"wrangler": "^3.28.2"
	},
	"engines": {
		"node": "20.x"
	}
}
